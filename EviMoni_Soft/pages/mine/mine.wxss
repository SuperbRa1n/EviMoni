/* pages/mine/mine.wxss */
page {
  background-color: #f5f5f5;
}
.userinfo {
  margin-top: 20rpx;
}
.avatar-wrapper {
  width: 128rpx;
  height: 150rpx;
  background-color: #ffffff;
}
.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}
.weui-input {
  width: 100%;
  font-size: 32rpx;
  color: grey;
  display: flex;
  justify-content: center;
}
.weui-input-2 {
  margin-left: 20rpx;
  padding-top: 30rpx;
  font-size: 32rpx;
  color: grey;
}
.mycup {
  margin-top: 60rpx;
  margin-left: 20rpx;
}
.cup {
  height: 48rpx;
  width: 48rpx;
}
.change-info {
  position: fixed;
  z-index: 999;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  top: 30%;
  height: 40%;
}
.device-info {
  width: 90%;
  margin-left: 5%;
  margin-top: 20rpx;
  height: 400rpx;
  background:#ffffff;
  border-radius: 10rpx;
  box-shadow: 10rpx 10rpx 10rpx #dcdcdc;
  position: relative;
}
.cup-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  position: absolute;
  top: 100rpx;
  left: 20rpx;
}
.device-name {
  position: absolute;
  top: 70rpx;
  left: 300rpx;
  font-size: 48rpx;
}
.add-icon {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  bottom: 100rpx;
  left: 300rpx;
}
.add-text {
  position: absolute;
  left: 340rpx;
  bottom: 95rpx;
  color: #007afe;
}
